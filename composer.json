{
    "name": "3maem/ash-sdk-php",
    "description": "ASH (Application Security Hash) - RFC 8785 compliant request integrity verification with server-signed seals, anti-replay protection, and zero client secrets",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "3maem"
        }
    ],
    "keywords": ["security", "integrity", "verification", "anti-replay", "laravel", "symfony"],
    "require": {
        "php": ">=8.1",
        "ext-hash": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Ash\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ash\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "phpstan": "phpstan analyse",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable"
}
